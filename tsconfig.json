{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true, // allow us to use 'import from' to packages that use commonjs (require)
    "allowSyntheticDefaultImports": true // allow us use default import for libraries that don't support it
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}